<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@style/listRemocraItem"
    >

    <TextView
        android:layout_width="125dp"
        android:layout_height="48dp"
        android:id="@+id/textViewId"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:id="@+id/textViewPECount"
        android:layout_marginLeft="16dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textViewId"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:id="@+id/textViewDate"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/textViewPECount"/>

    <TextView
        android:layout_width="48dp"
        android:layout_height="24dp"
        android:id="@+id/textPourcentage"
        android:layout_below="@id/textViewId"
        android:layout_alignParentLeft="true"
        android:textAlignment="center"/>

    <ProgressBar
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:id="@+id/progressBar"
        android:layout_below="@id/textViewPECount"
        android:layout_toRightOf="@id/textPourcentage"
        android:progress="0"
        android:progressDrawable="@drawable/progress_horizontal"
        android:layout_marginRight="30dp" />

</RelativeLayout>
